@import 'nib'
$tc = #00ACED

body
	font-family helvetica, arial, sans-serif

body,
html,
.wrapper
	height 100%

.wrapper
	position relative

.wrapper__bg,
.wrapper__mask
	position absolute
	width 100%
	height 100%
	top 0
	left 0

.wrapper__bg
	z-index 1
	background-size cover
	background-position center center

.wrapper__mask
	z-index 2
	background fade-out(black, 60%)

.wrapper__inner
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
	z-index 3

.sign
	width 300px
	text-align center
	margin-left -100px
	color darken(white, 60%)
	font-size 14px

.the-button
	background $tc
	display inline-block
	padding 10px 20px
	border-radius 5px
	color white
	text-decoration none
	font-size 17px
	border 1px solid darken($tc, 15%)
	transition 0.3s
	text-shadow 0 2px 1px fade-out(black, 85%)
	position relative
	z-index 2
	&:hover
		background darken($tc, 15%)
		border-color darken($tc, 30%)

.text-shadow
	z-index -1

.tweet
	position absolute
	fill black
	top 8px
	left 30px
	opacity 0
	fill white

.tweet svg
	animation bounce 0.8s infinite linear


.tweets-box.animate
	.tweet-1
		animation tweet-1 1.1s
		svg
			animation-duration 1s
	.tweet-2
		animation tweet-2 0.9s
	.tweet-3
		animation tweet-3 1.3s
		svg
			animation-duration 0.3s
	.tweet-4
		animation tweet-4 1s
	.tweet-5
		animation tweet-5 1.2s
		svg
			animation-duration 0.5s
	.tweet-6
		animation tweet-6 1.2s
	.tweet-7
		animation tweet-7 1s
	.tweet-8
		animation tweet-8 0.85s

@keyframes bounce
	0%
		transform translate3d(0, 0, 0)
	25%
		transform translate3d(-3px, -3px, -3px) scale(0.98, 0.98) rotate(-5deg)
	50%
		transform translate3d(0, 0, 0)
	75%
		transform translate3d(3px, 3px, 3px) scale(1.02, 1.02) rotate(5deg)
	100%
		transform translate3d(0, 0, 0)


@keyframes tweet-1
	0%
		transform translate(0, 0) rotate(30deg)
		opacity 0
	50%
		fill $tc
		opacity 1
	100%
		transform translate(120px, -120px) scale(1.1, 1.1) rotate(-30deg)
		opacity 0

@keyframes tweet-2
	0%
		transform translate(0, 0) scale(-1, 1) rotate(10deg)
		opacity 0
	50%
		fill $tc
		opacity 1
	100%
		transform translate(-100px, -80px) scale(-0.85, 0.85) rotate(-20deg)
		opacity 0

@keyframes tweet-3
	0%
		transform translate(0, 0) rotate(0deg)
		opacity 0
	50%
		fill $tc
		opacity 1
	100%
		transform translate(10px, -80px) rotate(-10deg)
		opacity 0

@keyframes tweet-4
	0%
		transform translate(0, 0) scale(-1, 1) rotate(5deg)
		opacity 0
	50%
		fill $tc
		opacity 1
	100%
		transform translate(-15px, -150px) scale(-0.8, 0.8) rotate(-15deg)
		opacity 0

@keyframes tweet-5
	0%
		transform translate(0, 0)
		opacity 0
	50%
		fill $tc
		opacity 1
	100%
		transform translate(50px, -50px)
		opacity 0

@keyframes tweet-6
	0%
		transform translate(0, 0) scale(-1, 1)
		opacity 0
	50%
		fill $tc
		opacity 1
	100%
		transform translate(-60px, -120px) scale(-1.3, 1.3)
		opacity 0

@keyframes tweet-7
	0%
		transform translate(0, 0)
		opacity 0
	50%
		fill $tc
		opacity 1
	100%
		transform translate(50px, -120px) scale(1.1, 1.1)
		opacity 0

@keyframes tweet-8
	0%
		transform translate(0, 0) scale(-1, 1) rotate(5deg)
		opacity 0
	50%
		fill $tc
		opacity 1
	100%
		transform translate(-60px, -60px) scale(-1.3, 1.3) rotate(-30deg)
		opacity 0