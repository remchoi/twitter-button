@import 'nib'
body,
html,
.wrapper
	height 100%

.wrapper
	position relative

.wrapper__bg,
.wrapper__mask
	position absolute
	width 100%
	height 100%
	top 0
	left 0

.wrapper__bg
	z-index 1
	background-size cover
	background-position center center

.wrapper__mask
	z-index 2
	background fade-out(black, 60%)

.wrapper__inner
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
	z-index 3